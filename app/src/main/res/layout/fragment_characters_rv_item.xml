<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_character_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_rm_duo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="@+id/iv_character_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_character_icon"
        app:layout_constraintTop_toBottomOf="@+id/iv_character_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_character_spec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Species"
        app:layout_constraintEnd_toEndOf="@+id/iv_character_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_character_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_character_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_character_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        app:layout_constraintEnd_toEndOf="@+id/iv_character_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_character_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_character_spec" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_character_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        app:layout_constraintEnd_toEndOf="@+id/iv_character_icon"
        app:layout_constraintStart_toStartOf="@+id/iv_character_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_character_gender" />
</androidx.constraintlayout.widget.ConstraintLayout>