<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/blue_light_secondary"
    android:elevation="@dimen/card_elevation_def"
    app:cardCornerRadius="@dimen/card_radius_def"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_light_secondary">

        <ImageView
            android:id="@+id/iv_character_icon"
            android:layout_width="@dimen/iv_character_item_icon_size"
            android:layout_height="@dimen/iv_character_item_icon_size"
            android:scaleType="fitXY"
            android:background="@color/blue_light_secondary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_character_name"
            style="@style/Character_item_text"
            android:background="@color/blue_light_secondary"
            android:layout_margin="@dimen/character_item_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_character_icon"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_character_spec"
            style="@style/Character_item_text"
            android:background="@color/blue_light_secondary"
            android:layout_margin="@dimen/character_item_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_character_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_character_gender"
            style="@style/Character_item_text"
            android:background="@color/blue_light_secondary"
            android:layout_margin="@dimen/character_item_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_character_spec" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_character_status"
            style="@style/Character_item_text"
            android:background="@color/blue_light_secondary"
            android:layout_margin="@dimen/character_item_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_character_gender" />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>