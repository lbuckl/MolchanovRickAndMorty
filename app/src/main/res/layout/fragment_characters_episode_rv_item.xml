<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Character_item_theme"
    android:elevation="@dimen/card_elevation_def"
    app:cardCornerRadius="@dimen/card_radius_def"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_light_secondary">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_character_episode"
            android:layout_margin="@dimen/character_item_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>