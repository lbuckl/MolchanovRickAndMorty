<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Activity. -->
    <style name="HeaderStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/green_bright</item>
    </style>

    <!-- Characters. -->
    <style name="Character_item_theme" parent="Theme.MolchanovRickAndMorty">
        <item name="fontFamily">@font/font_text</item>
        <item name="android:background">@color/blue_light_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Character_details_item_theme" parent="Theme.MolchanovRickAndMorty">
        <item name="fontFamily">@font/font_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Pagination. -->
    <style name="Pagination_item_style" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textSize">32sp</item>
    </style>

    <!-- Search dialog. -->
    <style name="BaseSearchTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="TextViewButtonStyle" parent="BaseSearchTextStyle">
        <item name="android:textColor">@color/red_dark</item>
    </style>

    <style name="BaseEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
    </style>
</resources>